#? SHARED
//-----------------------------------------------------------------------------------------------------------------------------------------
//#########################################################################################################################################
//-----------------------------------------------------------------------------------------------------------------------------------------


#version 150
precision highp float;


//-----------------------------------------------------------------------------------------------------------------------------------------
//#########################################################################################################################################
//-----------------------------------------------------------------------------------------------------------------------------------------
#? VP
//-----------------------------------------------------------------------------------------------------------------------------------------
//#########################################################################################################################################



in vec4 vx_Position  ;


void main() {

	gl_Position = vec4(vx_Position.xy,0.5,1);
	
}



//-----------------------------------------------------------------------------------------------------------------------------------------
//#########################################################################################################################################
//-----------------------------------------------------------------------------------------------------------------------------------------
#? FS
//-----------------------------------------------------------------------------------------------------------------------------------------
//#########################################################################################################################################


out vec4 color		        ;

uniform float scale ;
uniform float contrast ;
uniform sampler2DRect FBO;

void main() {
	color = texture(FBO,gl_FragCoord.xy*scale);
	color.rgb *= contrast;
	color.a = 1;
	
}






